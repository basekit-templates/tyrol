/* ===============================
   3. Grid
   =============================== */

*, *:before, *:after { -webkit-box-sizing: border-box; -moz-box-sizing: border-box; box-sizing: border-box; }

.row { 
    margin: 0;
    max-width: none;
    @media @tablet {
        padding: 4%;
        width: 100%;
    }
    .row {
        width: auto; 
        max-width: none; 
        min-width: 0; 
        margin: 0 -15px; 
    }
 }

.column, .columns { 
    float: left; 
    min-height: 1px; 
    position: relative; 
    padding-left: 4%;
    padding-right: 4%;
}

[class*="column"] + [class*="column"]:last-child { float: right; }
[class*="column"] + [class*="column"].end { float: left; }

.three, .row .three { 
    width: 25%; 
    padding-right: 0;
    padding-left: 0;
    @media @tablet {
        width: 100%;
    }
    .image {
        min-height: 100%;
        width: auto;
        position: fixed;
        @media @tablet {
            width: 100%;
            position: relative;
            z-index: -1;
        }
    }
}
.nine, .row .nine { 
    background: @color-swatch1;
    width: 75%; 
    @media @tablet {
        width: 100%;
    }
}
.row { 
    *zoom: 1; 
    &:before {
        content: " "; 
        display: table; 
    }
    &:after {
        content: " "; 
        display: table;
        clear: both;
    }
}

@media @tablet {
    .container {
        display: table;
        width: 100%;
        .push, .pull {
            display: block;
            width: 100%;
        }
        .nine {
            display: table-header-group;
            width: 100%;
        }
        .three {
            display: table-caption;
            overflow: hidden;
            height: 200px;
            width: 100%;
        }
        [class*="column"] + [class*="column"]:last-child { float: none; }
        [class*="column"] + [class*="column"].end { float: none; }
    }
}

@media @mobile {
    .container {
        .three {
            height: 135px;
        }
    }
}

